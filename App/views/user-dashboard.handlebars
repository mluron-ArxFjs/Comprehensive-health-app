            <stop offset="1" />
        </linearGradient>
    </defs>
    <defs>
        <linearGradient id="gradient-polarchart" style="opacity: 1" class="chart-material" x1="0" x2="0" y1="0" y2="1">
            <stop offset="0" />
            <stop offset="1" />
        </linearGradient>
    </defs>
</svg>