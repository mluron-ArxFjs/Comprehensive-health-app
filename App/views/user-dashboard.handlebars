    }

    #control-container {
        padding: 0px !important;
    }
</style>
<svg style="height: 0">
    <defs>
        <linearGradient id="gradient-chart" style="opacity: 1" class="chart-material" x1="0" x2="0" y1="0" y2="1">
            <stop offset="0" />
            <stop offset="1" />
        </linearGradient>
    </defs>
    <defs>
        <linearGradient id="gradient-splinechart" style="opacity: 1" class="chart-material" x1="0" x2="0" y1="0" y2="1">
            <stop offset="0" />
            <stop offset="0.6" />
            <stop offset="1" />
        </linearGradient>
    </defs>
    <defs>
        <linearGradient id="gradient-linechart" style="opacity: 1" class="chart-material" x1="0" x2="0" y1="0" y2="1">
            <stop offset="0" />
